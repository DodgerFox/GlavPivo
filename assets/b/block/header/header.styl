mainColor = #ffd427

.header
    width 100%
    box horizontal
    max-width 980px
    position absolute
    padding 65px 78px
    z-index 10
    +below(880px)
        padding 65px 40px
    +below(750px)
        position fixed
        padding 0px 40px
        height 70px
        box horizontal middle space-between flex-start row-reverse
        flex-direction row-reverse!important
        background-color mainColor

.headerMenu
    width 64%
    box horizontal space-around middle
    svg
        display none
    +below(980px)
        width 70%
    +below(880px)
        box horizontal space-between middle
    +below(750px)
        height 17px
        width 25px
        svg
            display block
            height 17px
            width 25px
.headerMenuWrap
    box horizontal space-around middle
    width 100%
    +below(880px)
        box horizontal space-between middle
    +below(750px)
        display none
        position absolute
        flex-direction column!important
        justify-content flex-start!important
        align-items stretch!important
        left 0px
        top 70px
        padding 10px 40px 30px 40px
        background-color mainColor

.headerMenuItems
        +below(750px)
            &:hover
                color #fff!important
.headerMenuItems
    color white
    font-family 'Muller-Black'
    font-size 12px
    font-weight 700
    line-height 14px
    letter-spacing 0.8px
    text-transform uppercase
    text-decoration none
    transition 0.3s all ease-in-out
    &:hover
        color mainColor
        +below(750px)
            color #fff!important
    +below(750px)
        float left
        width 100%
        padding 22px 10px
        color #000
        font-size 20px
        text-transform none
        border-top 2px solid #E5BE23
        &:hover
            color #fff
        &:first-child
            border-top none

.headerMenuItemActive
    color mainColor!important
    +below(750px)
        color #000!important
        &:hover
            color #fff!important

.logo
    width 164px
    height 30px
    margin 0px 43px 0px 0px
    +below(700px)
        margin 0px 43px 0px 0px
    +below(750px)
        margin 0
        width 129px
        height 24px

.headerPhoneIco
    svg
        height 20px
        width 20px
        display none
        +below(750px)
            display block

.headerMenuNear
    display none
    position absolute
    right 0
    left 0
    bottom 0
    width 100%
    top 348px
    z-index 11
    height 332px
    background-size cover
    background-image url('../img/headerMenuBg.jpg')
    padding 35px 52px
    +retina
        background-image url('../img/headerMenuBg@2x.jpg')
    &:before
        background-color rgba(0, 0, 0, .7)
        position absolute
        content ''
        top 0
        left 0
        width 100%
        height 100%
    .headerMenuNearWrap
        margin-bottom 5px
    p
        color #fff
        color #ffd427
        font-family 'Muller-Bold'
        font-size 20px
        font-weight 700
        line-height 24px
        position relative
    .headerMenuNearTextRight
        position relative
        right 0px
        color #fff
        margin-top 0px
        text-align right
        font-family 'Muller-Regular'
        font-size 16px
        font-weight 400
        line-height 19px
    .typeOfMarket
        size 140px 22px
        margin-bottom 15px
        margin-top 5px
        background-color #e0cec5
        border-radius 100px
        color #383838
        font-family 'Muller-Bold'
        font-size 14px
        font-weight 700
        line-height 17px
        letter-spacing -0.31px
        padding 3px 15px
        position relative
    .headerMenuNearTextWhite
        color #fff
    .headerMenuNearHowToFind
        box middle center horizontal
        margin-top 12px
    .headerMenuNearHowToFindIcon
        svg
            size 28px 38px
            position relative
            margin-right 10px
